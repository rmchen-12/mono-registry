{
    "compilerOptions": {
        /* 基础配置 */
        "target": "esnext",
        "lib": ["esnext"],
        "removeComments": false,
        "declaration": true,
        "sourceMap": true,
        /* 强类型检查配置 */
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        /* 模块分析配置 */
        "baseUrl": ".",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["src"]
}
